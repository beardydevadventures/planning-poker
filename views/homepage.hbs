<!doctype html>
<html>

{{> header}}

<body class="welcome-body text-center">
    <div class="welcome-box">
        <h1 class="h3 mb-3 font-weight-normal">Planning Poker</h1>
        <button class="btn btn-lg btn-primary btn-block create-room-btn">Create Room</button>
        <a href="/rooms" class="btn btn-lg btn-primary btn-block">Join Room</a>
        <p class="mt-3 mb-3 text-muted">&copy; 2020</p>
    </div>
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/custom.js"></script>
    <script>
        $(function () {
            $(".create-room-btn").on("click", function () {
                const roomID = randomstring();
                window.location.href = "/room#" + roomID;
            });
        });
    </script>
</body>

</html>